{
  "name": "Facebook Lite",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Facebook Lite",
  "icons": {
    "512": "logo512.png"
  },
  "browser_action": {
    "default_icon": "logo512.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "debugger",
    "activeTab",
    "tabs",
    "background",
    "https://*/",
    "http://*/",
    "declarativeContent",
    "webNavigation",
    "webRequest",
    "storage"
  ],
  "background": {
    "scripts": ["app/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ 
        "https://www.facebook.com/*"
      ],
      "js": [
        "app/content.js"
      ]
    }
  ]
}